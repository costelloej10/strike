<%= form_for @connection, url: {action: "create"}, html: {class: "form-signin", role: "form"} do |f| %>
  <h2 class="form-signin-heading">New Connection</h2>
  <% if @connection.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@connection.errors.count, "error") %> prohibited this connection from being saved:</h2>

      <ul>
      <% @connection.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :engineName, "Engine Name" %>
    <%= f.collection_select :engineName, @engines, :engineName,:engineName, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :senderComp, "Sender Comp" %>
    <%= f.text_field :senderComp, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :targetComp, "Target Comp" %>
    <%= f.text_field :targetComp, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :ip, "IP" %>
    <%= f.text_field :ip, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :port %>
    <%= f.text_field :port, class: "form-control" %>
  </div>
  <div class="actions">
    <%= f.submit "Create Connection", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
